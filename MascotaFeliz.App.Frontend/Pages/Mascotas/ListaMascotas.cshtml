@page
@model MascotaFeliz.App.Frontend.Pages.ListaMascotasModel
@{
}

<h1>Listado de Mascotas</h1>
<table class="table">
    <tr>
        <th>Nombres</th>
    </tr>
    @foreach (var mascota in Model.listaMascotas)
    {
        <tr>

            <td>@mascota.Nombre</td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesMascota" asp-route-duenoId="@mascota.Id">
                    Detalle Mascota
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarMascotas" asp-route-duenoId="@mascota.Id">
                    Editar Mascota
                </a>
            </td>

        </tr>
    }
</table>
